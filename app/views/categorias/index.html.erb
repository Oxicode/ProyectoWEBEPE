<%= notice %>
<%- model_class = Categoria -%>
<div class="page-header">
  <h1>Categorías</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Categoría</th>
      <th>Unidad de Negocio</th>
      <th><%=t '.actions', :default => "Acción" %></th>
    </tr>
  </thead>

  <tbody>
    <% @categorias.each do |categoria| %>
      <tr>
        <td><%= categoria.name %></td>
        <td><%= categoria.area.name %></td>
        <td>
          <%= link_to t('.edit', :default => "Editar"),
                      edit_categoria_path(categoria), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => "Eliminar"),
                      categoria_path(categoria),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro de eliinar el registro...?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to t('.new', :default => "Nuevo"),
            new_categoria_path,
            :class => 'btn btn-primary' %>
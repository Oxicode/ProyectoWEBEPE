<%- model_class = Categoria -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Unidad de Negocio</dt>
  <dd><%= @categoria.area.name %></dd>
  <dt>Categor√≠a</dt>
  <dd><%= @categoria.name %></dd>

</dl>

<%= link_to t('.back', :default => "Regresar"),
              categorias_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => "Editar"),
              edit_categoria_path(@categoria), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => "Eliminar"),
              categorias_path(@categoria),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro de eliminar?')) },
              :class => 'btn btn-danger' %>

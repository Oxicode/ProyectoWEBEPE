<%= notice %>
<%- model_class = Role -%>
<div class="page-header">
  <h1>Roles</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Código</th>
      <th>Nombre</th>
      <th><%=t '.actions', :default => "Acción" %></th>
    </tr>
  </thead>
  
  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= link_to role.id, role_path(role) %></td>
        <td><%= role.name %></td>
        <td>
          <div class="btn-group">
          <%= link_to t('.edit', :default => "Editar"),
                      edit_role_path(role), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => "Eliminar"),
                      role_path(role),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro de eliminar?')) },
                      :class => 'btn btn-xs btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => "Nuevo"),
            new_role_path,
            :class => 'btn btn-primary' %>

<%- model_class = Role -%>
<div class="page-header">
  <h1>Roles</h1>
</div>

<dl class="dl-horizontal">
  <dt>Nombre</dt>
  <dd><%= @role.name %></dd>
</dl>

<%= link_to t('.back', :default => "Regresar"),
              roles_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => "Editar"),
              edit_role_path(@role), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => "Eliminar"),
              role_path(@role),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro de eliminar?')) },
              :class => 'btn btn-danger' %>

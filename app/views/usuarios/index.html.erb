<%- model_class = Usuario -%>
<div class="page-header">
  <h1>Usuarios</h1>
</div>

<h1>Lista de Usuarios</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Usuario</th>
      <th>Apellido Paterno</th>
      <th>Apellido Materno</th>
      <th>Nombres</th>
      <th>Acción</th>
    </tr>
  </thead>
  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.id %></td>
        <td><%= usuario.codigo %></td>
        <td><%= usuario.apellido_paterno %></td>
        <td><%= usuario.apellido_materno %></td>
        <td><%= usuario.primer_nombre %></td>
        <!--<td><%#= link_to 'Mostrar', usuario %></td> 
        <td><%#= link_to 'Editar', edit_usuario_path(usuario) %></td>
        <td><%#= link_to 'Eliminar', usuario, method: :delete, data: { confirm: 'Estás seguro?' } %></td> !-->

        <td>
          <%= link_to t('.edit', :default => 'Editar'),
                      edit_usuario_path(usuario), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => 'Eliminar'),
                      usuario_path(usuario),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Estás seguro de eliminar?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>


      </tr>
    <% end %>

<%= simple_form_for(@comentario) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :comentario %>
    <%= f.input :ticket_id, :as => :hidden, :input_html => { :value => @ticket.id } %>
    <%= f.input :empleado_id, :as => :hidden, :input_html => { :value => 1 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

    

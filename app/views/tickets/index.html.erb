<p id="notice"><%= notice %></p>

<div id="menu"></div>

<h1>Mis Incidencias</h1>

<table class="table table-striped">  
  <thead>
    <tr>
     <th>Ticket</th>
      <th>Asunto</th>
      <th>Fecha</th>
      <th>Unid. Negocio</th>
      <th>Categoria</th>
      <th>Subcategoria</th>
      <th>Tipo</th>
      <th>Estado</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.id %></td>
        <td><%= ticket.asunto %></td>
        <td><%= ticket.created_at.strftime("%d-%m-%Y") %></td>
        <td><%= ticket.area.name %></td>
        <td><%= ticket.categoria.name %></td>
        <td><%= ticket.subcategoria.name %></td>
        <td><%= ticket.tipo %></td>
        <td><%= ticket.estado %></td>
        <td>
          
          <%= link_to "Ver",
                      show_ticket_path(ticket), :class => 'btn btn-default btn-xs' %>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


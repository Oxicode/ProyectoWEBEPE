<%- model_class = Empleado -%>
<div class="page-header">
  <h1>Empleados</h1>
</div>

<dl class="dl-horizontal">
  <dt>User</dt>
  <dd><%= @empleado.username %></dd>
  <dt>Apellidos</dt>
  <dd><%= @empleado.apellidos %></dd>
  <dt>Nombres</dt>
  <dd><%= @empleado.nombres %></dd>
  <dt>Und.Negocio</dt>
  <dd><%= @empleado.area.name %></dd>
  <dt>Email</dt>
  <dd><%= @empleado.email %></dd>
</dl>
<%= link_to t('.back', :default => "Regresar"),
              empleados_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => "Editar"),
              edit_empleado_path(@empleado), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => "Eliminar"),
              empleados_path(@empleado),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro de eliminar?')) },
              :class => 'btn btn-danger' %>
